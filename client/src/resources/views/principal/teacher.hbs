<hr class='hr' />
<section class='text-center'>
    <div class='row'>
        <div class='col-md-6 mb-5 mb-md-5 mb-lg-0 position-relative'>
            <i class='fa-solid fa-chalkboard-user fa-3x text-primary mb-4'></i>
            <h5 class='text-primary fw-bold mb-3'>{{listTeacher.length}}+</h5>
            <h6 class='fw-normal mb-0'>Number of teachers</h6>
            <div class='vr vr-blurry position-absolute my-0 h-100 d-none d-md-block top-0 end-0'></div>
        </div>

        <div class='col-md-6 mb-5 mb-md-5 mb-lg-0 position-relative'>
            <i class='fa-solid fa-person-chalkboard fa-3x text-primary mb-4'></i>
            <h5 class='text-primary fw-bold mb-3'>{{listHomeroom.length}}+</h5>
            <h6 class='fw-normal mb-0'>Number of homeroom teachers</h6>
            <div class='vr vr-blurry position-absolute my-0 h-100 d-none d-md-block top-0 end-0'></div>
        </div>
    </div>
</section>
<hr class='hr' />
<!-- Section: Main chart -->
<section class='mb-4'>
    <table id='listTeacher' class='table table-hover' style='width:100%'>
        <thead>
            <tr>
                <th>Full name</th>
                <th>Position</th>
                <th>Gender</th>
                <th>Address</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Class homeroom</th>
            </tr>
        </thead>
        <tbody>
            {{#each listTeacher}}
                <tr>
                    <td class='fw-bold mb-1'>{{fullname}}</td>
                    <td>{{position}}</td>
                    <td>{{gender}}</td>
                    <td>{{address}}</td>
                    <td><a href='mailto:{{email}}' class='fw-bold mb-1'>
                            {{email}}</a></td>
                    <td><a href='tel:{{phone}}' class='fw-bold mb-1'>
                            {{phone}}</a></td>
                    <td>{{classHomeroom.name}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</section>
<!-- Section: Main chart -->
<script>
    $('#listTeacher').DataTable({ columnDefs: [ { targets: 3, render: DataTable.render.datetime('Do MMM YYYY'), }, ],
    });
</script>