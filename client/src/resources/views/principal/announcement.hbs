<button type='button' class='btn btn-primary' data-mdb-toggle='modal' data-mdb-target='#modalCreateClass'><i
        class='fa-solid fa-plus'
    ></i>
    Create new announcement</button>
<hr class='hr' />
{{#if success}}
    <div class='alert alert-success d-flex align-items-center' role='alert'>
        <div>
            <i class='fa-regular fa-circle-check' style='color: #307722;'></i>
            {{success}}
        </div>
    </div>
{{/if}}

<section>
    <div class='card'>
        <div class='card-body'>
            <div class='d-flex justify-content-between'>
                <div class='d-flex flex-row'>
                    <div class='align-self-center'>
                        <i class='far fa-comment-alt text-warning me-4'></i>
                    </div>
                    <div>
                        <h4>Total Comments</h4>
                        <p class='mb-0'>Monthly blog posts</p>
                    </div>
                </div>
                <div class='align-self-center'>
                    <h5 class='mb-0'>84,695</h5>
                </div>
            </div>
        </div>
    </div>
</section>